		<license>PHP License</license>
		<state>alpha</state>
		<notes>
			...
		</notes>

		<deps>
			<dep type="php" rel="ge" version="5.0.0"/>
		</deps>

		<filelist>
			<dir name="/" baseinstalldir="Net" role="php">	 
				<file>GameServerQuery.php</file>
				<dir name="GameServerQuery">
					<file>Games.xml</file>
					<file>Protocol.php</file>
					<file>Socket.php</file>
					<file>Error.php</file>
					<dir name="Protocol">
						<file>freelancer.php</file>
						<file>gamespy.php</file>
						<file>halflife.php</file>
